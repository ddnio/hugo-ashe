{{- $posts := where site.RegularPages "Section" "posts" -}}
[
{{- range $index, $post := $posts -}}
{{- if gt $index 0 }},{{ end }}
  {
    "title": {{ ($post.Title | plainify) | jsonify }},
    "url": {{ $post.RelPermalink | jsonify }},
    "date": {{ ($post.Date.Format "2006-01-02") | jsonify }},
    "categories": {{ ($post.Params.categories | default (slice)) | jsonify }},
    "tags": {{ ($post.Params.tags | default (slice)) | jsonify }},
    "summary": {{ (($post.Params.summary | default "") | plainify) | jsonify }},
    "content": {{ ($post.Plain | truncate 300) | jsonify }},
    "lang": {{ ($post.Lang | default site.LanguageCode | default "zh-CN") | jsonify }}
  }
{{- end -}}
]
